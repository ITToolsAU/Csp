<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="google-analytics.com" type="host">*.google-analytics.com</value>
                <value id="paypal.com" type="host">*.paypal.com</value>
                <value id="paypalobjects.com" type="host">*.paypalobjects.com</value>
                <value id="zoho" type="host">*.zoho.com</value>
                <value id="zohopublic" type="host">*.zohopublic.com</value>
                <value id="zohocdn" type="host">*.zohocdn.com</value>
                <value id="zohocdnwss" type="host">wss://vts.zohopublic.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="google-analytics.com" type="host">*.google-analytics.com</value>
                <value id="paypal.com" type="host">*.paypal.com</value>
                <value id="paypalobjects.com" type="host">*.paypalobjects.com</value>
                <value id="zoho" type="host">*.zoho.com</value>
                <value id="zohopublic" type="host">*.zohopublic.com</value>
                <value id="zohocdn" type="host">*.zohocdn.com</value>
                <value id="google" type="host">*.google.com</value>
                <value id="gstatic.com" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="google-analytics.com" type="host">*.google-analytics.com</value>
                <value id="paypal.com" type="host">*.paypal.com</value>
                <value id="paypalobjects.com" type="host">*.paypalobjects.com</value>
                <value id="zoho" type="host">*.zoho.com</value>
                <value id="zohopublic" type="host">*.zohopublic.com</value>
                <value id="zohocdn" type="host">*.zohocdn.com</value>
                <value id="google" type="host">*.google.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="data" type="host">data:</value>
                <value id="magentocommerce" type="host">*.magentocommerce.com</value>
                <value id="zohocdn" type="host">*.zohocdn.com</value>
                <value id="zohocdnpublic" type="host">*.zohopublic.com</value>

            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="zohopublic" type="host">*.zohopublic.com</value>
                <value id="zohocdn" type="host">*.zohocdn.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="fontawesome" type="host">*.zohocdn.com</value>
                <value id="zohofonts" type="host">*.gstatic.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
